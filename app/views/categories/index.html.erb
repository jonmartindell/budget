<p id="notice"><%= notice %></p>

<h1>Income</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Who</th>
      <th>Avg Monthly</th>
      <th>Infrequent</th>
      <th>Expense</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.where(expense: false).each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.heading %></td>
        <td><%= category.budget %></td>
        <td><%= category.infrequent %></td>
        <td><%= category.expense %></td>
        <td><%= link_to 'Show', category, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

