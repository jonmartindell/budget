<style> .category-rows:nth-child(even){ background-color: #f1f1f1; } </style>

<div class="container-fluid">
  <h1>Expenses</h1>
  <hr></hr>
    <div class="row">
      <h5 class="col-xs-6 text-nowrap" style=""></h5>
      <h5 class="col-xs-1" style=""><small>Monthly Remaining</small></h5>
      <div class="col-xs-3"></div>
      <h5 class="col-xs-1"></h5>
    </div>
  <hr></hr>
  <% @categories.each do |category| %>
    <div class="row category-rows">
      <h5 class="col-xs-6 text-nowrap" style="">
        <%=category.name[0,13] %>
          <small class="<%= 'text-success' if category.ytd < 0 %>">($<%=category.ytd%>)
            <% if category.ytd < 0 %>
              <span class="text-success glyphicon glyphicon-arrow-down"></span>
            <% end %>
            <% if category.ytd == 100 %>
              <span class="text-success glyphicon glyphicon-arrow-up"></span>
            <% end %>
          </small>
      </h5>
      <h5 class="col-xs-1 text-nowrap">
        $<%=category.remaining%><small>/<%=category.budget%></small>
      </h5>
      <div class="col-xs-3"></div>
      <div class="col-xs-1">
        <button class="btn btn-success glyphicon glyphicon-plus" type="button"></button>
      </div>
    </div>
  <% end %>
</div>

