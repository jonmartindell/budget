<style> .row:nth-child(even){ background-color: #f1f1f1; } </style>

<div class="container-fluid">
  <h1>Expenses</h1>
  <hr></hr>
    <div class="row">
      <h1 class="col-xs-5 text-nowrap" style=""></h1>
      <h1 class="col-xs-1" style=""><small>Monthly Remaining</small></h1>
      <div class="col-xs-5"></div>
      <h1 class="col-xs-1"></h1>
    </div>
  <hr></hr>
  <% @categories.each do |category| %>
    <div class="row">
      <h1 class="col-xs-5 text-nowrap" style=""><%=category.name[0,13] %> <small class="<%= 'text-success' if category.ytd < 0 %>">($<%=category.ytd%>)
      <% if category.ytd < 0 %>
        <span class="text-success glyphicon glyphicon-arrow-down"></span>
      <% end %>
      <% if category.ytd == 100 %>
        <span class="text-success glyphicon glyphicon-arrow-up"></span>
      <% end %>
        </small></h1>
      <h1 class="col-xs-1 text-nowrap">
        $<%=category.remaining%><small>/<%=category.budget%></small>
      </h1>
      <div class="col-xs-5"></div>
      <div class="col-xs-1">
        <button class="btn btn-block btn-lg btn-success glyphicon glyphicon-plus" type="button"></button>
      </div>
    </div>
  <% end %>
</div>

