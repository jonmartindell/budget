<style> .category-rows:nth-child(even){ background-color: #f1f1f1; } </style>

<div class="container-fluid">
  <h3>Expenses</h3>
  <hr></hr>
    <div class="row">
      <h5 class="col-xs-4"><small>Category</small></h5>
      <h5 class="col-xs-2 text-nowrap"><small>YTD +/-</small></h5>
      <h5 class="col-xs-1"></h5>
      <h5 class="col-xs-2 text-nowrap"><small>January</small></h5>
      <h5 class="col-xs-2"></h5>
    </div>
  <% @categories.each do |category| %>
    <div class="row category-rows">
      <h5 class="col-xs-4 text-nowrap"><%=category.name[0,13] %></h5>
      <h5 class="col-xs-2 text-nowrap">
        <small class="<%= 'text-success' if category.ytd > 0 %>">$<%=category.ytd%></small>
      </h5>
      <h5 class="col-xs-1">
            <% if category.ytd == 100 %>
              <span class="text-warning glyphicon glyphicon-arrow-up"></span>
            <% end %>
      </h5>
      <h5 class="col-xs-2 text-nowrap">
        $<%=category.remaining%><small>/<%=category.budget%></small>
      </h5>
      <div class="col-xs-1 col-xs-offset-1">
        <%= link_to new_transaction_path(category: category.id), { class: "btn btn-success" } do %>
          <i class="glyphicon glyphicon-plus"></i>
        <% end %>
      </div>
    </div>
  <% end %>

  <h3>Uncommon Expenses</h3>
  <hr></hr>
    <div class="row">
      <h5 class="col-xs-4"><small>Category</small></h5>
      <h5 class="col-xs-3 text-nowrap"><small>Yearly Spent</small></h5>
      <h5 class="col-xs-3 text-nowrap"><small>Yearly Budget</small></h5>
      <h5 class="col-xs-2"></h5>
    </div>
  <% @uncommon_categories.each do |category| %>
    <div class="row category-rows">
      <h5 class="col-xs-4 text-nowrap"><%=category.name[0,13] %></h5>
      <h5 class="col-xs-3 text-nowrap">
          <small class="<%= 'text-success' if category.ytd < 0 %>">$<%=category.ytd%>
            <% if category.ytd < 0 %>
              <span class="text-success glyphicon glyphicon-arrow-down"></span>
            <% end %>
            <% if category.ytd == 100 %>
              <span class="text-success glyphicon glyphicon-arrow-up"></span>
            <% end %>
          </small>
      </h5>
      <h5 class="col-xs-2 text-nowrap">
        $<%=category.remaining%><small>/<%=category.budget%></small>
      </h5>
      <div class="col-xs-1 col-xs-offset-1">
        <%= link_to new_transaction_path(category: category.id), class: "btn btn-success" do %>
          <i class="glyphicon glyphicon-plus"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

